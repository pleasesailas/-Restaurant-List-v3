<form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST">
  <div class="m-3">
    <label for="name" class="form-label">新增餐廳名稱</label>
    <input id="name" type="text" class="form-control" placeholder="阿法肯餐廳..." name="name" aria-describedby="name"
      value="{{ restaurant.name }}" required>
    <div class="form-text" style="color:rgb(220, 116, 116)">此欄位為必填</div>
  </div>

  <div class="m-3">
    <label for="name_en" class="form-label">新增餐廳英文名稱</label>
    <input id="name_en" type="text" class="form-control" placeholder="alpha restaurant..." name="name_en"
      aria-describedby="englishName" value="{{ restaurant.name_en }}" required>
    <div class="form-text" style="color:rgb(220, 116, 116)">此欄位為必填</div>
  </div>

  <div class="m-3">
    <label for="category" class="form-label">類別</label>
    <input id="category" list="categories" class="form-control" placeholder="選一個類別" name="category"
      aria-describedby="category" value="{{ restaurant.category }}" required>
    <datalist id="categories">
      <option>中東料理</option>
      <option>日本料理</option>
      <option>義式餐廳</option>
      <option>美式</option>
      <option>酒吧</option>
      <option>咖啡</option>
    </datalist>
    <div class="form-text" style="color:rgb(220, 116, 116)">此欄位為必填</div>
  </div>

  <div class="m-3">
    <label for="image" class="form-label">圖片</label>
    <input id="image" type="text" class="form-control"
      placeholder="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5634/08.jpg" name="image"
      aria-describedby="image" value="{{ restaurant.image }}" required>
    <div id="image" class="form-text" style="color:rgb(220, 116, 116)">此欄位為必填</div>
  </div>

  <div class="m-3">
    <label for="location" class="form-label">地址</label>
    <input id="location" type="text" class="form-control" placeholder="台中市什麼區什麼路幾號" name="location"
      aria-describedby="location" value="{{ restaurant.location }}" required>
    <div id="location" class="form-text" style="color:rgb(220, 116, 116)">此欄位為必填</div>
  </div>

  <div class="m-3">
    <label for="phone" class="form-label">電話</label>
    <input id="phone" type="tel" class="form-control" placeholder="0421234567" name="phone" aria-describedby="phone"
      value="{{ restaurant.phone }}" required>
    <div id="phone" class="form-text" style="color:rgb(220, 116, 116)">此欄位為必填</div>
  </div>

  <div class="m-3">
    <label for="google_map" class="form-label">Google map</label>
    <input id="google_map" type="url" class="form-control" placeholder="https://www.google.com.tw/maps/"
      name="google_map" aria-describedby="google_map" value="{{ restaurant.google_map }}" required>
    <div id="google_map" class="form-text" style="color:rgb(220, 116, 116)">此欄位為必填</div>
  </div>

  <div class="m-3">
    <label for="rating" class="form-label">評價</label>
    <input id="rating" type="number" min="0" max="5" step="0.1" class="form-control" placeholder="4.0" name="rating"
      aria-describedby="rating" value="{{ restaurant.rating }}" required>
    <div id="rating" class="form-text" style="color:rgb(220, 116, 116)">此欄位為必填</div>
  </div>

  <div class="m-3">
    <label for="description" class="form-label">餐廳描述</label>
    <input id="description" type="text" class="form-control" placeholder="Describe here..." name="description"
      aria-describedby="description" value="{{ restaurant.description }}" required>
    <div id="description" class="form-text" style="color:rgb(220, 116, 116)">此欄位為必填</div>
  </div>
  <button type="submit" class="btn btn-info m-3">Save</button>
  <button type="reset" class="btn btn-outline-danger">重新輸入</button>
</form>
<a href="/" class="btn btn-outline-primary m-3">Home</a>