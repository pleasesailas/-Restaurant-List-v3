<div class="row">
  <div class="col-6 m-auto">
    <div class="card card-body mt-3">
      <h1 class="title text-center">Login</h1>
      <form action="/users/login" method="POST">
        <div class="mt-3">
          <label for="email" class="mb-2" style="font-size: 20px;">Email</label>
          <input type="email" name="email" placeholder="Enter email e.g. example@example.com" class="form-control">
        </div>
        <div class="mt-3">
          <label for="password" class="mb-2" style="font-size: 20px;">Password</label>
          <input type="text" name="password" placeholder="Enter password" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary mt-3 w-100" style="font-size: 20px;">Login</button>
        <p class="mt-3" style="font-size: 20px;">No Account? <a href="/users/register">Register</a></p>
      </form>
    </div>
  </div>
</div>